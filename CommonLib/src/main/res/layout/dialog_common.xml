<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/dip540"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_common_dialog"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip40"
            android:layout_marginRight="@dimen/dip40"
            android:layout_marginTop="@dimen/dip40"
            android:gravity="center"
            android:textColor="@color/tv_black"
            android:textSize="@dimen/sip36" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip40"
            android:layout_marginRight="@dimen/dip40"
            android:layout_marginTop="@dimen/dip18"
            android:gravity="center"
            android:textColor="@color/tv_gray"
            android:textSize="@dimen/sip30" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip1"
            android:layout_marginTop="@dimen/dip18"
            android:background="@color/colorddd" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip100"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/tv_black"
                android:textSize="@dimen/sip28"
                tools:text="@string/lib_cancel" />

            <View
                android:id="@+id/view_center_line"
                android:layout_width="@dimen/dip1"
                android:layout_height="match_parent"
                android:background="@color/colorddd" />

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dip30"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/tv_blue"
                android:textSize="@dimen/sip28"
                tools:text="@string/lib_sure" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>