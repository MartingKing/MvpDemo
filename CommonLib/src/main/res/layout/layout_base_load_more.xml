<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/load_more_load_end_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dip20"
        android:layout_marginTop="@dimen/dip30"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip20"
            android:text="-- 没有更多数据 --"
            android:textColor="@color/color666"
            android:textSize="@dimen/sip28" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/load_more_load_fail_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dip60"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip20"
            android:text="出错了，请点击重新加载更多"
            android:textColor="@color/color666"
            android:textSize="@dimen/sip28" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/load_more_loading_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dip20"
        android:layout_marginTop="@dimen/dip30"
        android:gravity="center_vertical">

        <ProgressBar
            android:id="@+id/img_progress"
            android:layout_width="@dimen/dip40"
            android:layout_height="@dimen/dip50"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dip20"
            android:text="努力加载中..."
            android:textColor="@color/color666"
            android:textSize="@dimen/sip28" />
    </LinearLayout>
</RelativeLayout>