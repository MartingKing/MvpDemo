<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip372"
        android:background="@drawable/bg_gradient_invite_friend"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已获奖励（元）"
            android:textColor="@color/white"
            android:textSize="@dimen/sip24" />

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip12"
            android:textColor="@color/white"
            android:textSize="@dimen/sip72" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip116"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_total_reward"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_numberof_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorFF9531"
                android:textSize="@dimen/sip36" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已邀请好友（个）"
                android:textColor="@color/color999"
                android:textSize="@dimen/sip24" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/dip2"
            android:layout_height="@dimen/dip90"
            android:layout_gravity="center_vertical"
            android:background="@color/window_bg" />

        <LinearLayout
            android:id="@+id/ll_total_invite"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_invited_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorFF9531"
                android:textSize="@dimen/sip36" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已投资好友（个）"
                android:textColor="@color/color999"
                android:textSize="@dimen/sip24" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip1"
        android:background="@color/window_bg" />

    <TextView
        android:id="@+id/tvLoiginBtn"
        style="@style/normal_roundshape_btn"
        android:layout_marginTop="@dimen/dip160"
        android:background="@drawable/shape_bg_yello"
        android:text="立即邀请"
        android:textColor="@color/bt_white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip40"
        android:layout_marginTop="@dimen/dip84"
        android:text="邀请规则"
        android:textColor="@color/color666"
        android:textSize="@dimen/sip24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip40"
        android:layout_marginTop="@dimen/dip10"
        android:text="1、邀请好友注册且投资7+1推荐平台，首投10000元以上，您即可获得10元奖励。"
        android:textColor="@color/color999"
        android:textSize="@dimen/sip24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip40"
        android:layout_marginTop="@dimen/dip10"
        android:text="2、好友注册时，填写您的手机号，即可邀请成功。"
        android:textColor="@color/color999"
        android:textSize="@dimen/sip24" />
</LinearLayout>
