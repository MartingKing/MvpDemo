<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dip210"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dip30"
        android:layout_marginStart="@dimen/dip30"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/dip90"
            android:layout_height="@dimen/dip90"
            app:srcCompat="@drawable/register_step1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip12"
            android:text="注册7+1"
            android:textColor="@color/color666"
            android:textSize="@dimen/sip24" />
    </LinearLayout>

    <com.jinzaofintech.commonlib.view.TextViewIcon
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/dip26"
        android:text="@string/icon_right"
        android:textColor="@color/colorFF703F"
        android:textSize="@dimen/sip24" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/dip90"
            android:layout_height="@dimen/dip90"
            app:srcCompat="@drawable/register_step2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip12"
            android:text="注册平台账号"
            android:textColor="@color/color666"
            android:textSize="@dimen/sip24" />
    </LinearLayout>

    <com.jinzaofintech.commonlib.view.TextViewIcon
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/dip26"
        android:text="@string/icon_right"
        android:textColor="@color/colorFF703F"
        android:textSize="@dimen/sip24" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/dip90"
            android:layout_height="@dimen/dip90"
            app:srcCompat="@drawable/register_step3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip12"
            android:text="完成平台投资"
            android:textColor="@color/color666"
            android:textSize="@dimen/sip24" />
    </LinearLayout>

    <com.jinzaofintech.commonlib.view.TextViewIcon
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/dip26"
        android:text="@string/icon_right"
        android:textColor="@color/colorFF703F"
        android:textSize="@dimen/sip24" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/dip90"
            android:layout_height="@dimen/dip90"
            app:srcCompat="@drawable/register_step4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip12"
            android:text="领取返现奖励"
            android:textColor="@color/color666"
            android:textSize="@dimen/sip24" />
    </LinearLayout>

</LinearLayout>
