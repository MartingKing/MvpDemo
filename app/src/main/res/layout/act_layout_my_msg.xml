<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_msg_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dip100"
        android:text="申请提现"
        android:textColor="@color/color333"
        android:textSize="@dimen/sip32" />

    <TextView
        android:id="@+id/tv_msg_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip50"
        android:layout_marginRight="@dimen/dip50"
        android:layout_marginTop="@dimen/dip30"
        android:textColor="@color/color666"
        android:textSize="@dimen/sip28" />


    <TextView
        android:id="@+id/tv_msg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/dip50"
        android:layout_marginTop="@dimen/dip50"
        android:textColor="@color/color666" />
</LinearLayout>