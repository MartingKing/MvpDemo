<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dip90"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请确认该手机号码："
            android:textColor="@color/color666"
            android:textSize="@dimen/sip28" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color333"
            android:textSize="@dimen/sip28" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dip20"
        android:text="是否可以正常结算短信验证码"
        android:textColor="@color/color666"
        android:textSize="@dimen/sip28" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dip120"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_can_accept"
            android:layout_width="@dimen/dip260"
            android:layout_height="@dimen/dip72"
            android:background="@drawable/blue_shape_round_bg_no_solid"
            android:gravity="center"
            android:text="不可以接收"
            android:textColor="@color/color369FF7" />

        <TextView
            android:id="@+id/tv_cant_accept"
            android:layout_width="@dimen/dip260"
            android:layout_height="@dimen/dip72"
            android:layout_marginLeft="@dimen/dip45"
            android:background="@drawable/shape_bg_blue"
            android:gravity="center"
            android:text="可以接收"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>